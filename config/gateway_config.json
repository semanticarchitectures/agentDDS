{
  "domain_id": 0,
  "gateway": {
    "name": "mcp-dds-gateway",
    "version": "1.0.0",
    "bind_address": "0.0.0.0",
    "port": 8080
  },
  "security": {
    "enabled": true,
    "certs_base_path": "./certs",
    "identity_ca": "ca/identity_ca_cert.pem",
    "permissions_ca": "ca/permissions_ca_cert.pem",
    "governance": "governance.p7s",
    "require_authentication": true
  },
  "topic_allowlist": {
    "monitoring_agent": {
      "read": ["SensorData", "SystemHealth", "StatusTopic"],
      "write": []
    },
    "control_agent": {
      "read": ["SensorData", "StatusTopic"],
      "write": ["CommandTopic"]
    },
    "query_agent": {
      "read": ["SystemHealth", "SensorData"],
      "write": []
    },
    "chatbot_agent": {
      "read": ["ChatPrompt"],
      "write": ["ChatResponse"]
    }
  },
  "performance": {
    "max_samples_per_read": 100,
    "batch_timeout_ms": 50,
    "queue_depth": 1000,
    "worker_threads": 4
  },
  "rate_limiting": {
    "enabled": true,
    "requests_per_minute": 1000,
    "burst_size": 100,
    "per_agent_limit": 500
  },
  "monitoring": {
    "metrics_enabled": true,
    "metrics_port": 9090,
    "health_check_enabled": true,
    "log_level": "INFO"
  },
  "dds_qos": {
    "reliability": "RELIABLE",
    "durability": "VOLATILE",
    "history_kind": "KEEP_LAST",
    "history_depth": 10,
    "deadline_sec": 1,
    "liveliness": "AUTOMATIC",
    "liveliness_lease_duration_sec": 5
  }
}
